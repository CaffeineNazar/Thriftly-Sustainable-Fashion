<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.policy.PrivacyPolicyActivity">

    <LinearLayout
        android:id="@+id/id_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/id_btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/CD_ic_back"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/primary" />

        <TextView
            android:id="@+id/id_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="@string/title_kebijakan_privasi"
            android:textColor="@color/primary"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="At Thrifly, your privacy is our top priority. This Privacy Policy outlines how we collect, use, store, and protect your personal information when you use our app and services."
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:textColor="@color/primary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"
                android:background="@color/grey" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Information We Collect"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.1 Personal Information"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="When you sign up, we collect:\n- Name\n- Email Address\n- Phone Number (optional)\n- Profile Picture (optional)"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginStart="16dp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.2 Usage Data"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We collect data about your interaction with the app, including:\n- Browsing and search history\n- Purchase and sales history\n- Items viewed or favorited"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginStart="16dp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.3 Device Information"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To enhance your experience, we collect:\n- Device type and operating system\n- IP address\n- App usage statistics\n- Geolocation (if enabled)"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginStart="16dp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.4 Payment Information"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="For purchases, we collect:\n- Billing information\n- Transaction history\n(Note: Payment details are processed by secure third-party payment processors; we do not store card details.)"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginStart="16dp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. How We Use Your Information"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.1 To Provide and Improve Services"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We use your information to:\n- Process transactions (purchases and sales)\n- Deliver personalized recommendations using our recommender system\n- Enable communication between buyers and sellers"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginStart="16dp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.2 To Enhance User Experience"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We analyze your app usage patterns to:\n- Provide customer support\n- Offer tailored marketing and promotions"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginStart="16dp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Sharing Your Information"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3.1 With Service Providers"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We may share your data with trusted service providers, including:\n- Payment processors\n- Shipping and logistics partners\n- Analytics tools (e.g., Google Analytics)"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginStart="16dp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3.2 For Legal Reasons"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We may disclose your information if required to:\n- Comply with laws and regulations\n- Respond to valid legal requests (e.g., court orders)"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginStart="16dp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Your Rights"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4.1 Access and Correction"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You can view, update, or delete your personal information in the app settings."
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginStart="16dp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4.2 Data Portability"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Request a copy of your data in a readable format."
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginStart="16dp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4.3 Opt-Out"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unsubscribe from marketing communications via the app or email preferences."
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginStart="16dp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4.4 Account Deletion"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Permanently delete your account and data by contacting support."
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginStart="16dp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. Data Storage and Security"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your data is securely stored on cloud servers managed by trusted third-party providers. We use encryption and regular security audits to protect your information."
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginStart="16dp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6. Cookies and Tracking Technologies"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thrifly uses cookies to save your preferences, deliver personalized content, and analyze app performance. You can manage cookie preferences in your device settings."
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginStart="16dp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7. Third-Party Links"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thrifly may contain links to third-party websites or services. We are not responsible for their privacy practices. Please review their policies before sharing your information."
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginStart="16dp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8. Changes to This Privacy Policy"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We may update this Privacy Policy from time to time. Changes will be notified via in-app notifications or updates to this page. Your continued use of the app indicates your acceptance of the updated policy."
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginStart="16dp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9. Contact Us"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="For questions or concerns about this Privacy Policy, please contact us at:\nEmail: support@thriflyapp.com\nPhone: +62 31 456 789 999\nMail: thriftly@gmail.com"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginStart="16dp"
                android:textColor="@color/primary" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>

